<section class="shadow-lg bg-ember-black">
  <div class="container flex items-center justify-between px-6 py-4 mx-auto md:px-0">
    <LinkTo @route="home">
      <img class="w-28" src="/images/ember-logo.svg" alt="logo Emberjs">
    </LinkTo>
    <nav class="hidden text-xs uppercase text-ember-linen md:block">
      <ul class="flex">
        <LinkTo @route="home" class="px-4 py-2 hover:text-ember">Inicio</LinkTo>
        <LinkTo @route="mascots" class="px-4 py-2 hover:text-ember">Mascotas</LinkTo>
        <LinkTo @route="about" class="px-4 py-2 hover:text-ember">Sobre Mi</LinkTo>
      </ul>
    </nav>
    <nav {{on 'click' this.openMobileNav}} class="text-2xl text-ember-white hover:text-ember md:hidden">
      <i class="fa-solid fa-bars" />
    </nav>
  </div>
</section>
{{!-- navbar mobile --}}
{{#if this.showMobileNav}}
<section class="fixed z-10 w-screen h-screen backdrop-blur-sm bg-ember-black/70 backdrop-brightness-50">
  <i {{on 'click' this.closeMobileNav}} class="absolute text-4xl hover:text-ember right-6 top-6 fa-solid fa-xmark text-ember-linen"></i>
  <nav class="text-4xl font-thin uppercase">
    <ul class="flex flex-col items-center justify-center w-screen h-screen space-y-24 text-ember-linen">
      <LinkTo @route="home" {{on 'click' this.closeMobileNav}} class="hover:text-ember">Inicio</LinkTo>
      <LinkTo @route="mascots" {{on 'click' this.closeMobileNav}} class="hover:text-ember">Mascotas</LinkTo>
      <LinkTo @route="about" {{on 'click' this.closeMobileNav}} class="hover:text-ember">Sobre Mi</LinkTo>
    </ul>
  </nav>
</section>
{{/if}}