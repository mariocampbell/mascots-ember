{{#if this.drawer.show}}
<section class="fixed z-20 flex w-screen h-screen">
  <div {{on 'click' this.drawer.toggle}} class="flex-1 opacity-80 bg-ember-black" />
  <section class="flex flex-col h-full w-80 bg-ember-white">
    <header class="flex items-center justify-between px-6 border-b-2 py-7 text-ember-white bg-ember-blue border-ember-blue">
      <h1 class="text-xl">{{if false 'Agregar' 'Editar'}} Mascota</h1>
      <i {{on 'click' (fn this.drawer.toggle)}} class="text-2xl hover:text-ember fa-solid fa-xmark text-ember-linen"/>
    </header>

    <main class="flex-1 p-6 overflow-auto space-y-4">

      <div
        {{on 'mouseenter' this.mouseEnter}}
        {{on 'mouseleave' this.mouseLeave}}
        class="flex flex-col items-center justify-center h-40 mx-auto my-4 mb-6"
      >
        <div class="relative overflow-hidden rounded-lg">
          <div class="absolute {{if this.editAvatar '' 'hidden' }} flex items-center justify-center w-full h-full text-4xl text-ember-white bg-ember-black/50">
            <i class="fa-solid fa-camera opacity-80"/>
          </div>
          <img class="max-h-full" src="/images/mascots/tomster.webp" alt="Classic Tomster" />
        </div>
        <p class="mt-2 text-xs text-ember-gray">classic-tomster.webp</p>
      </div>

      <div>
        <label class="ml-2 text-sm text-ember-gray" for="title">TÃ­tulo</label>
        <Input
        id="title"
        @type="text"
        @value="Classic Tomster"
        placeholder="ingrese titulo"
        class="w-full px-4 py-2 text-sm font-light text-gray-800 border-2 rounded-full focus:outline-ember-light-blue"
          />
      </div>

      <div>
        <label class="ml-2 text-sm text-ember-gray" for="tags">Tags</label>
        <Input
        id="tags"
        @type="text"
        placeholder="tomster,zoey,friends"
        @value="tomster"
        class="w-full px-4 py-2 text-sm font-light text-gray-800 border-2 rounded-full focus:outline-ember-light-blue"
          />
      </div>

      <div>
        <label class="ml-2 text-sm text-ember-gray" for="stars">Estrellas</label>
        <Input
        id="stars"
        @type="number"
        min="1"
        max="5"
        placeholder="0"
        @value="5"
        class="w-full px-4 py-2 text-sm font-light text-gray-800 border-2 rounded-full focus:outline-ember-light-blue"
          />
      </div>

    </main>
    <footer class="flex justify-between px-6 py-6 text-sm">
      <button class="px-6 py-2 border-2 rounded-full hover:bg-ember hover:text-ember-white hover:border-ember text-ember-light-blue border-ember-light-blue" type="button">eliminar</button>
      <button class="px-6 py-2 rounded-full hover:bg-ember-blue hover:border-ember-blue bg-ember-light-blue text-ember-white" type="button">agregar</button>
    </footer>
  </section>
</section>
{{/if}}